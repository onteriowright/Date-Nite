@model DateNiteBackEndCapstone.Models.DateViewModels.ListOfDatesViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Scheduled Dates</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Day Of Date
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ListOfDates)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Date.DateTime)
                </td>

                <td>
                    @Html.ActionLink("Edit Time Of Date", "Edit", "Dates", new { id = item.Date.Id }, new { @class = "btn btn-sm btn-outline-secondary" })
                </td>
                <td>
                    @Html.ActionLink("Places To Attend", "ViewBusinessesForScheduledDates", "Businesses", new { id = item.Date.Id }, new { @class = "btn btn-sm btn-outline-secondary" })
                </td>
            </tr>
        }
    </tbody>
</table>