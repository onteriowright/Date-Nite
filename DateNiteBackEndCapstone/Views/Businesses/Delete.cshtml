@model DateNiteBackEndCapstone.Models.Business

@{
    ViewData["Title"] = "Delete";
}

<h3>Are you sure you want to delete @Html.DisplayFor(model => model.Name)?</h3>
<div>
    <hr />
    <dl class="row">
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dd class="col-sm-10">
            <img style="width:200px; height:200px;" src="@Html.DisplayFor(model => model.Img)" />
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-sm btn-outline-danger" />
        <a class="btn btn-sm btn-outline-secondary" asp-controller="Dates" asp-action="Index">Back</a>
    </form>
</div>
