@model DateNiteBackEndCapstone.Models.BusinessViewModels.SearchBusinessViewModel

@{
    ViewData["Title"] = "Search";
}

<p class="search-title">Search For Fun</p>

<div class="search-form">
    <div>
        <form asp-controller="Businesses" asp-action="EventIndex">
            <input class="form-control mr-sm-2 search-form-space" style="background-color: #d9d9d9;" type="text" placeholder="Search City" name="city" required>
            <select class="form-control search-form-space" style="background-color: #d9d9d9;" name="state" asp-items="@Model.ListOfStateOptions" required>
            </select>
            <input class="form-control mr-sm-2 search-form-space" style="background-color: #d9d9d9;" type="text" placeholder="Enter Budget" name="budget" required>
            <input type="submit" value="Search" class="btn btn-sm btn-primary search-form-space" />
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}