@model DateNiteBackEndCapstone.Models.BusinessViewModels.BusinessDetailsViewModel
@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "Details";
    var currentUser = await UserManager.GetUserAsync(User);
}

<div>
    <h5>@Html.DisplayFor(model => model.Business.Name)</h5>
    <hr />
    <form asp-action="AddToDate">
        <div class="">
            <p class="col-sm-10">
                <img style="width:200px; height:200px;" src="@Html.DisplayFor(model => model.Business.Img)" />
            </p>
            <label asp-for="Business.LocationTypeId" class="control-label">Is This Food Or Fun?</label>
            <select asp-for="Business.LocationTypeId" class="form-control" style="max-width: 18%; margin-bottom: 18px;" asp-items="@Model.LocationTypesOptions">
            </select>

            @if (Model.Business.Rating.ToString() == "1.0" || Model.Business.Rating.ToString() == "1.1" || Model.Business.Rating.ToString() == "1.2" || Model.Business.Rating.ToString() == "1.3" || Model.Business.Rating.ToString() == "1.4" || Model.Business.Rating.ToString() == "1.5" || Model.Business.Rating.ToString() == "1.6" || Model.Business.Rating.ToString() == "1.7" || Model.Business.Rating.ToString() == "1.8" || Model.Business.Rating.ToString() == "1.9")
            {
                <p>
                    ⭐
                </p>
            }
            else if (Model.Business.Rating.ToString() == "2.0" || Model.Business.Rating.ToString() == "2.1" || Model.Business.Rating.ToString() == "2.2" || Model.Business.Rating.ToString() == "2.3" || Model.Business.Rating.ToString() == "2.4" || Model.Business.Rating.ToString() == "2.5" || Model.Business.Rating.ToString() == "2.6" || Model.Business.Rating.ToString() == "2.7" || Model.Business.Rating.ToString() == "2.8" || Model.Business.Rating.ToString() == "2.9")
            {
                <p>
                    ⭐⭐
                </p>
            }
            else if (Model.Business.Rating.ToString() == "3.0" || Model.Business.Rating.ToString() == "3.1" || Model.Business.Rating.ToString() == "3.2" || Model.Business.Rating.ToString() == "3.3" || Model.Business.Rating.ToString() == "3.4" || Model.Business.Rating.ToString() == "3.5" || Model.Business.Rating.ToString() == "3.6" || Model.Business.Rating.ToString() == "3.7" || Model.Business.Rating.ToString() == "3.8" || Model.Business.Rating.ToString() == "3.9")
            {
                <p>
                    ⭐⭐⭐
                </p>
            }
            else if (Model.Business.Rating.ToString() == "4.0" || Model.Business.Rating.ToString() == "4.1" || Model.Business.Rating.ToString() == "4.2" || Model.Business.Rating.ToString() == "4.3" || Model.Business.Rating.ToString() == "4.4" || Model.Business.Rating.ToString() == "4.5" || Model.Business.Rating.ToString() == "4.6" || Model.Business.Rating.ToString() == "4.7" || Model.Business.Rating.ToString() == "4.8" || Model.Business.Rating.ToString() == "4.9")
            {
                <p>
                    ⭐⭐⭐⭐
                </p>
            }
            else if (Model.Business.Rating.ToString() == "5.0" || Model.Business.Rating.ToString() == "5.1" || Model.Business.Rating.ToString() == "5.2" || Model.Business.Rating.ToString() == "5.3" || Model.Business.Rating.ToString() == "5.4" || Model.Business.Rating.ToString() == "5.5" || Model.Business.Rating.ToString() == "5.6" || Model.Business.Rating.ToString() == "5.7" || Model.Business.Rating.ToString() == "5.8" || Model.Business.Rating.ToString() == "5.9")
            {
                <p>
                    ⭐⭐⭐⭐⭐
                </p>
            }
            else
            {
                <p>
                    This Restaurant Does Not Have A Rating A This Time!
                </p>
            }

            @foreach (var address in Model.Business.LocationAddress.DisplayAddress)
            {
                <div>
                    <p>@address</p>
                </div>

            }


            <p class="col-sm-10">
                @Html.DisplayFor(model => model.Business.Phone)
            </p>
        </div>
        <input asp-for="Business.BusinessId" type="hidden" value="@Model.Business.BusinessId" class="form-control" />
        <input asp-for="Business.Name" type="hidden" value="@Model.Business.Name" class="form-control" />
        <input asp-for="Business.LocationAddress" type="hidden" value="@Model.Business.LocationAddress" class="form-control" />
        <input asp-for="Business.Price" type="hidden" value="@Model.Business.Price" class="form-control" />
        <input asp-for="Business.Phone" type="hidden" value="@Model.Business.Phone" class="form-control" />
        <input asp-for="Business.Rating" type="hidden" value="@Model.Business.Rating" class="form-control" />
        <input asp-for="Business.Img" type="hidden" value="@Model.Business.Img" class="form-control" />
        <input asp-for="Business.UserId" type="hidden" value="@Model.Business.UserId" class="form-control" />
        <input type="submit" value="Add to Date" class="btn btn-primary" />
    </form>
</div>

<div>
    @Html.ActionLink("Back To Eateries", "SearchEatery", "Businesses")
</div>
<div>
    @Html.ActionLink("BacK To Events", "SearchFun", "Businesses")
</div>